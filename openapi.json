{
    "openapi": "3.0.1",
    "info": {
        "description": "Babylon is a platform for crowd translation.",
        "license": {
            "name": "MIT",
            "url": "https://github.com/cntitanium/babylon/blob/dev/LICENSE"
        },
        "title": "Babylon",
        "version": "1.0.0",
        "contact": {
            "name": "Codename Titanium",
            "url": "https://github.com/cntitanium"
        }
    },
    "tags": [
        {
            "name": "Project",
            "description": "General data separators used to categorize `Phrase`s."
        },
        {
            "name": "Phrase",
            "description": "Language variables referenced in code. `Translation`s stick to `Phrase`s."
        }
    ],
    "paths": {
        "/project": {
            "post": {
                "description": "Create a `Project`.",
                "tags": [
                    "Project"
                ],
                "requestBody": {
                    "description": "Data required upon project creation. `projectId` body parameter will be overridden.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Project"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },
        "/project/{projectId}": {
            "get": {
                "description": "Read a `Project`.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "description": "Update a `Project`.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    }
                ],
                "requestBody": {
                    "description": "Data required upon project creation. `projectId` body parameter will be ignored.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Project"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            },
            "delete": {
                "description": "Delete a `Project`.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },

        "/phrase": {
            "post": {
                "description": "Create a `Phrase`.",
                "tags": [
                    "Phrase"
                ],
                "requestBody": {
                    "description": "Data required upon project creation. `phraseId` body parameter will be overridden.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Phrase"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },
        "/phrase/{phraseId}": {
            "get": {
                "description": "Read a `Phrase`.",
                "tags": [
                    "Phrase"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathPhraseId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Phrase"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "description": "Update a `Phrase`.",
                "tags": [
                    "Phrase"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathPhraseId"
                    }
                ],
                "requestBody": {
                    "description": "Data required upon phrase creation. `phraseId` body parameter will be ignored.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Phrase"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            },
            "delete": {
                "description": "Delete a `Phrase`.",
                "tags": [
                    "Phrase"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathPhraseId"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },

        "/project/{projectId}/translation/{key}": {
            "get": {
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    },
                    {
                        "in": "path",
                        "name": "key",
                        "description": "The translation key",
                        "example": "global.user.welcome",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Phrase"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/project/{projectId}/translation": {
            "get": {
                "operationId": "searchByPatterns",
                "description": "Searches for the given key-patterns",
                "parameters": [
                    {
                        "in": "path",
                        "name": "projectId",
                        "description": "The project id",
                        "example": "1337",
                        "schema": {
                            "type": "number"
                        },
                        "required": true
                    },
                    {
                        "in": "query",
                        "name": "keyPatterns",
                        "description": "The comma separated translation key patterns",
                        "example": "global.user.*,game.user.*,babylon.*",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "languages": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "language": {
                                                        "type": "string",
                                                        "example": "en_US"
                                                    },
                                                    "phrases": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "object",
                                                            "properties": {
                                                                "key": {
                                                                    "type": "string",
                                                                    "example": "global.user.welcome"
                                                                },
                                                                "value": {
                                                                    "type": "string",
                                                                    "example": "Welcome {{ user }}!"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Project": {
                "type": "object",
                "properties": {
                    "projectId": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 3,
                        "maxLength": 128,
                        "example": "Babylon"
                    }
                }
            },
            "Phrase": {
                "type": "object",
                "properties": {
                    "phraseId": {
                        "type": "number"
                    },
                    "projectId": {
                        "type": "number"
                    },
                    "key": {
                        "type": "string",
                        "description": "The key used to identify a phrase",
                        "format": "([a-zA-Z0-9]\\.?)+",
                        "example": "global.user.welcome"
                    },
                    "translations": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Translation"
                        }
                    }
                }
            },
            "Proposal": {
                "type": "object",
                "properties": {
                    "proposalId": {
                        "type": "number"
                    },
                    "projectId": {
                        "type": "number"
                    },
                    "author": {
                        "type": "string",
                        "format": "UUID"
                    },
                    "created": {
                        "type": "number",
                        "format": "Unix Timestamp"
                    },
                    "status": {
                        "$ref": "#/components/schemas/ProposalStatus"
                    },
                    "key": {
                        "type": "string",
                        "format": "([a-zA-Z0-9]\\.?)+",
                        "example": "global.user.welcome"
                    },
                    "language": {
                        "type": "string",
                        "description": "RFC 5646",
                        "example": "en-US"
                    },
                    "template": {
                        "type": "string",
                        "example": "Welcome {{ user }}!"
                    }

                }
            },
            "Translation": {
                "type": "object",
                "properties": {
                    "language": {
                        "type": "string",
                        "description": "RFC 5646",
                        "example": "en-US"
                    },
                    "template": {
                        "type": "string",
                        "example": "Welcome {{ user }}!"
                    },
                    "proposalId": {
                        "type": "number",
                        "example": "1337"
                    }
                }
            },
            "ProposalStatus": {
                "type": "string",
                "enum": [
                    "PROPOSED",
                    "ACCEPTED",
                    "REJECTED",
                    "CHANGE_REQUESTED"
                ]
            }
        },
        "responses": {
            "200Ok": {
                "description": "Everything went well. Following [CQS principles](https://en.wikipedia.org/wiki/Command%E2%80%93query_separation)."
            }
        },
        "parameters": {
            "PathProjectId": {
                "description": "The `Project` id",
                "in": "path",
                "name": "projectId",
                "example": "1337",
                "schema": {
                    "type": "number"
                },
                "required": true
            },
            "PathPhraseId": {
                "description": "The `Phrase` id",
                "in": "path",
                "name": "phraseId",
                "example": "42",
                "schema": {
                    "type": "number"
                },
                "required": true
            }
        }
    }
}