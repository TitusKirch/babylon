{
    "openapi": "3.0.1",
    "info": {
        "description": "Babylon is a platform for crowd translation.",
        "license": {
            "name": "MIT",
            "url": "https://github.com/cntitanium/babylon/blob/dev/LICENSE"
        },
        "title": "Babylon",
        "version": "1.0.0",
        "contact": {
            "name": "Codename Titanium",
            "url": "https://github.com/cntitanium"
        }
    },
    "tags": [
        {
            "name": "Project",
            "description": "General data separators used to categorize `Phrase`s."
        },
        {
            "name": "Phrase",
            "description": "Language variables referenced in code. `Translation`s stick to `Phrase`s."
        }
    ],
    "servers": [
        {
            "description": "localhost alpha-1",
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/project": {
            "post": {
                "description": "Create a `Project`.",
                "tags": [
                    "Project"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "The name of the project",
                                        "example": "Babylon"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "The description of the project",
                                        "example": "A tool for crowd translation"
                                    }                                    
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },
        "/project/{projectId}": {
            "get": {
                "description": "Gets a `project` by it's project id.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/404NotFound"
                    }
                }
            },
            "patch": {
                "description": "Updates a `Project` by it's project id.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "The project name"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "The project description"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            },
            "delete": {
                "description": "Deletes a `Project` by its project id.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },

        "/phrase": {
            "post": {
                "description": "Create a `Phrase`.",
                "tags": [
                    "Phrase"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "projectId": {
                                        "type": "number"
                                    },
                                    "key": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },
        "/phrase/{phraseId}": {
            "get": {
                "description": "Gets a `Phrase` by its `phraseId`.",
                "tags": [
                    "Phrase"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathPhraseId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Phrase"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            },
            "patch": {
                "description": "Update a `Phrase` based on its `phraseId`.",
                "tags": [
                    "Phrase"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathPhraseId"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "key": {
                                        "type": "string"
                                    },
                                    "projectId": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            },
            "delete": {
                "description": "Delete a `Phrase` by its `phraseId`.",
                "tags": [
                    "Phrase"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathPhraseId"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200Ok"
                    }
                }
            }
        },
        "/project/{projectId}/translation/{key}": {
            "get": {
                "operationId": "getTranslationByProjectAndKey",
                "description": "Gets a translation using the project id and the key",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/PathProjectId"
                    },
                    {
                        "in": "path",
                        "name": "key",
                        "description": "The translation key",
                        "example": "global.user.welcome",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Phrase"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/project/{projectId}/translation": {
            "get": {
                "operationId": "searchByPatterns",
                "description": "Searches for translations. Key-patterns can be passed to filter the results. If none was passed, all translation get returned.",
                "tags": [
                    "Project"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "projectId",
                        "description": "The project id",
                        "example": "1337",
                        "schema": {
                            "type": "number"
                        },
                        "required": true
                    },
                    {
                        "in": "query",
                        "name": "keyPatterns",
                        "description": "The comma separated translation key patterns",
                        "example": "global.user.*,game.user.*,babylon.*",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "languages": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "language": {
                                                        "type": "string",
                                                        "example": "en_US"
                                                    },
                                                    "phrases": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "object",
                                                            "properties": {
                                                                "key": {
                                                                    "type": "string",
                                                                    "example": "global.user.welcome"
                                                                },
                                                                "value": {
                                                                    "type": "string",
                                                                    "example": "Welcome {{ user }}!"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Project": {
                "type": "object",
                "properties": {
                    "projectId": {
                        "type": "number"
                    },
                    "parent": {
                        "type": "number",
                        "description": "The id of the parent project"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 3,
                        "maxLength": 32,
                        "example": "Babylon"
                    },
                    "description": {
                        "type": "string",
                        "minLength": 5,
                        "maxLength": 128,
                        "example": "Tool for crowd translation"
                    }
                }
            },
            "Phrase": {
                "type": "object",
                "properties": {
                    "phraseId": {
                        "type": "number"
                    },
                    "projectId": {
                        "type": "number"
                    },
                    "key": {
                        "type": "string",
                        "description": "The key used to identify a phrase",
                        "format": "([a-zA-Z0-9]\\.?)+",
                        "example": "global.user.welcome"
                    },
                    "translations": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Translation"
                        }
                    }
                }
            },
            "Proposal": {
                "type": "object",
                "properties": {
                    "proposalId": {
                        "type": "number"
                    },
                    "projectId": {
                        "type": "number"
                    },
                    "author": {
                        "type": "string",
                        "format": "UUID"
                    },
                    "created": {
                        "type": "number",
                        "format": "Unix Timestamp"
                    },
                    "status": {
                        "$ref": "#/components/schemas/ProposalStatus"
                    },
                    "key": {
                        "type": "string",
                        "format": "([a-zA-Z0-9]\\.?)+",
                        "example": "global.user.welcome"
                    },
                    "language": {
                        "type": "string",
                        "description": "RFC 5646",
                        "example": "en-US"
                    },
                    "template": {
                        "type": "string",
                        "example": "Welcome {{ user }}!"
                    },
                    "formatting": {
                        "$ref": "#/components/schemas/Project"
                    },
                    "votes": {
                        "$ref": "#/components/schemas/Votes"
                    },
                    "comments": {
                        "$ref": "#/components/schemas/Comment"
                    }
                }
            },
            "Translation": {
                "type": "object",
                "properties": {
                    "language": {
                        "type": "string",
                        "description": "RFC 5646",
                        "example": "en-US"
                    },
                    "template": {
                        "type": "string",
                        "example": "Welcome {{ user }}!"
                    },
                    "formatting": {
                        "$ref": "#/components/schemas/Project"
                    },
                    "proposalId": {
                        "type": "number",
                        "example": "1337"
                    }
                }
            },
            "ProposalStatus": {
                "type": "string",
                "enum": [
                    "DRAFT",
                    "PUBLISHED",
                    "ACCEPTED",
                    "REJECTED",
                    "CHANGE_REQUESTED",
                    "HIDDEN"
                ]
            },
            "Formatting": {
                "type": "string",
                "description": "The formatting used in a proposal or translation (e.g. Handlebars, ICU, HTML, Minecraft Color Formatting)",
                "example": "HTML"
            },
            "Votes": {
                "type": "object",
                "properties": {
                    "up": {
                        "type": "array",
                        "description": "List of user UUIDs voted up",
                        "items": {
                            "type": "string"
                        }
                    },
                    "down": {
                        "type": "array",
                        "description": "List of user UUIDs voted down",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "Comment": {
                "type": "object",
                "properties": {
                    "author": {
                        "type": "string",
                        "format": "UUID",
                        "description": "The author's user id"
                    }
                }
            }
        },
        "responses": {
            "200Ok": {
                "description": "Everything went well. Following [CQS principles](https://en.wikipedia.org/wiki/Command%E2%80%93query_separation)."
            },
            "404NotFound": {
                "description": "Resource not found."
            }
        },
        "parameters": {
            "PathProjectId": {
                "description": "The `Project` id",
                "in": "path",
                "name": "projectId",
                "example": "1337",
                "schema": {
                    "type": "number"
                },
                "required": true
            },
            "PathPhraseId": {
                "description": "The `Phrase` id",
                "in": "path",
                "name": "phraseId",
                "example": "42",
                "schema": {
                    "type": "number"
                },
                "required": true
            }
        }
    }
}